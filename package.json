{
  "name": "my-family-finances",
  "version": "1.0.5",
  "description": "My Family Finances Management Application",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "react-dev": "react-scripts start",
    "electron-dev": "cross-env ELECTRON_IS_DEV=true electron .",
    "build": "react-scripts build",
    "build-release": "npm run build && npx electron-packager . MyFamilyFinances --platform=win32 --arch=x64 --out=dist --overwrite",
    "electron-build": "electron-builder",
    "test": "react-scripts test",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.29.3",
    "electron-store": "^8.1.0",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.1",
    "react-hot-toast": "^2.4.0",
    "react-router-dom": "^6.8.0",
    "recharts": "^2.5.0",
    "smart-buffer": "^4.2.0",
    "styled-components": "^5.3.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^18.14.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.34.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "author": "Carl Prewitt Jr <carl@carl-prewitt.com>",
  "build": {
    "appId": "com.carlprewitt.my-family-finances",
    "productName": "My Family Finances",
    "directories": {
      "output": "dist"
    },
    "forceCodeSigning": false,
    "files": [
      "build/**/*",
      "public/electron.js",
      "!node_modules/sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "dir",
      "verifyUpdateCodeSignature": false,
      "sign": null
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "My Family Finances"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
